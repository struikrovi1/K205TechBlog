@model Entities.Blog

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Blog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype = "multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

              <div class="form-group">
                <input type = "hidden" asp-for="K205UserId" class="form-control" />
                <span asp-validation-for="K205UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input name="OldPhoto" type="hidden" value ="@Model.PhotoURL" class="form-control" />
                <input asp-for ="PhotoURL" name="Image" type="file" class="form-control" />
                <img width = "100" src = "@Model.PhotoURL" />
                <span  class="text-danger"></span>
            </div>
         
       
            <div class="form-group">
                      <select class="form-control" name="CategoryID">
                    @foreach (var cat in ViewBag.Categories as List<Category>)
                    {
                        <option value="@cat.ID">@cat.Name</option>
                    }
                    
                    
                </select>

                
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>
         

           
         
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

