@model IEnumerable<Entities.Blog>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class = "form-control" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.PhotoURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeoURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryID)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.K205UserId)
            </th>
        
       
         
            <th></th>
        </tr>
    </thead>
    <tbody>

        @{
            var count = 0;
        }
@foreach (var item in Model) {
        count++;
        <tr>
        
             <td>
              @count
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
           
            <td>
               <img width = "100" src = "@item.PhotoURL"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeoURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.K205User.Name)
            </td>
           
         
         
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.ID }) |
                @Html.ActionLink("Details", "Details", new {  id=item.ID}) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
