@{
    Layout = "_LayoutAuth";
}

@model RegisterVM








<body class="hold-transition register-page">
<div class="register-box">
  <div class="register-logo">
    <a href="/"><b>Admin</b>LTE</a>
  </div>

  <div class="card">
    <div class="card-body register-card-body">
      <p class="login-box-msg">Register a new membership</p>

      <form  method="post">
        <div class="input-group">
          <input type="text" class="form-control" asp-for="UserName" placeholder="Username">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
        </div>
         <span class="mb-3" asp-validation-for="UserName"></span>

        <div class="input-group ">
          <input type="text" class="form-control" asp-for="Name" placeholder="Firstname">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
        </div>
        <span class="mb-3" asp-validation-for="Name"></span>

        <div class="input-group">
          <input type="text" class="form-control" asp-for="Surname" placeholder="Surname">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
        </div>
        <span class="mb-3" asp-validation-for="Surname"></span>

        <div class="input-group">
          <input type="email" class="form-control" asp-for="Email" placeholder="Email">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <span class="mb-3" asp-validation-for="Email"></span>

        <div class="input-group">
          <input type="password" class="form-control" asp-for="Password" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <span class="mb-3" asp-validation-for="Password"></span>

        <div class="input-group mb-3">
          <input type="password" class="form-control" name="RetypePassword" placeholder="Retype password">
          <div class="input-group-append"> 
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
            <span>@ViewBag.Password</span>
          </div>
        </div>
        <div class="row">
          <div class="col-8">
            <div class="icheck-primary">
              <input type="checkbox" id="agreeTerms" name="terms" value="agree">
              <label for="agreeTerms">
               I agree to the <a href="#">terms</a>
              </label>
            </div>
          </div>
          <!-- /.col -->
          <div class="col-4">
            <input type="submit" value="Register" class="btn btn-primary btn-block" />
          </div>
          <!-- /.col -->
        </div>

        <input type="hidden" asp-for="PhotoURL" value="asdf" />
        <input type="hidden" asp-for="About" value="asdf" />
      </form>

      <div class="social-auth-links text-center">
        <p>- OR -</p>
        <a href="#" class="btn btn-block btn-primary">
          <i class="fab fa-facebook mr-2"></i>
          Sign up using Facebook
        </a>
        <a href="#" class="btn btn-block btn-danger">
          <i class="fab fa-google-plus mr-2"></i>
          Sign up using Google+
        </a>
      </div>

      <a href="login.html" class="text-center">I already have a membership</a>
    </div>
    <!-- /.form-box -->
  </div><!-- /.card -->
</div>

</body>
